 <label><h2>Article</h2></label>
 <%= link_to @article.category.name, @article.category %><br/>
 <label>Article title : </label><%= @article.title %><br/>
    <label>Body : </label><%= @article.body %><br/>
    <label>Published_Date : </label><%= @article.publish_date %><br/>
  <% if @article.is_published %>
    It is published
  <% else %>
    It is not published
  <% end %>
  <br/>
<%= image_tag(@article.feature_image_url.to_s,size: "50x50" , alt:"Image") %><br/><br/>
   <% if (user_signed_in?) && (can? :manage, Article.new) %>
  <%= link_to "Edit", edit_article_path(@article) %> <br/>
  <%= link_to "Destroy",article_path(@article), method: :delete, data:{confirm: "Are you Sure?"}%> |
  <%= link_to "ALL ", articles_path %>
<% end %>

<%= form_with model: @comment do |f| %>
   <% if user_signed_in? %>

	<%= f.hidden_field :article_id , value: @article.id %><br/>

  <label> Enter title </label>
  <%= f.text_field :title %>  

  <label> Enter body </label>
  <%= f.text_field :body %>

  <%= f.submit %>
  <%end%>
<br/><br/>

   <% if (user_signed_in?) && (can? :update, Comment.new) %>
<% @article.comments.each do |c|%>
 <li><%= c.title%>
  <%= c.body%>
  <%= link_to "Edit", edit_comment_path(c) %> 
  <%= link_to "Destroy",comment_path(c), method: :delete, data:{confirm: "Are you Sure?"}%> 
</li>
<%end%>
<%else%>
<% Comment.where(:article_id => @article.id).each do |comment| %>
  <b> <%= comment.title %>: </b> <%= comment.body %>
<% end %>
<%end%>
<br/>
<%end%>