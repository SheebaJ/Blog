<h2>New Article</h2>

<%= @articles.each do |p| %>
  <h3><%= p.title %> - <%= p.body %></h3> - <%= p.category_id %></h3>  
  <h3><%= link_to "New Post", new_post_path %></h3>
  <h3><%= link_to "Show", p %></h3>
  <h3><%= link_to "Edit", edit_post_path(p) %></h3>
  <h3><%= link_to "Delete", p , method: :delete, data: { confirm: "sure?" } %></h3>
<% end %>