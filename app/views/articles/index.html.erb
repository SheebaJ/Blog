<% if (user_signed_in?) && (can? :create, Article.new) %>
  <h2><%= link_to "Add Article" , new_article_path %></h2><br/>
  <%end%>
  <% @articles.each_with_index do |article,index|%>
    <%= index+1 %> . <%= article.title %> - <%=  article.category.name %><br/>     
    <% if (user_signed_in?) && (can? :read, Article.new) %>
    <%= link_to "Show",  article_path(article) %>
    <%end%>
<br/>
 <% end %>